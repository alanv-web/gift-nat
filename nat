    <script>
        // Create floating hearts
        function createHearts() {
            const container = document.getElementById('heartsBg');
            const hearts = ['ðŸ’•', 'ðŸ’—', 'ðŸ’–', 'ðŸ’˜', 'ðŸ’', 'â¤ï¸', 'ðŸ’Œ'];
            
            for (let i = 0; i < 30; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.top = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 6 + 's';
                heart.style.animationDuration = (4 + Math.random() * 4) + 's';
                container.appendChild(heart);
            }
        }
        
        // Move No button when clicked
        function moveNoButton() {
            const btn = document.querySelector('.btn-no');
            const container = document.querySelector('.container');
            const containerRect = container.getBoundingClientRect();
            
            // Random position within the container
            const maxX = containerRect.width - 150;
            const maxY = containerRect.height - 100;
            const newX = Math.random() * maxX - maxX/2;
            const newY = Math.random() * maxY - maxY/2;
            
            btn.style.position = 'fixed';
            btn.style.left = (50 + newX / containerRect.width * 50) + '%';
            btn.style.top = (50 + newY / containerRect.height * 50) + '%';
            btn.style.transform = 'translate(-50%, -50%)';
        }
        
        // Say Yes
        function sayYes() {
            document.getElementById('mainContent').style.display = 'none';
            document.getElementById('responseYes').style.display = 'block';
            createCelebration();
        }
        
        // Say No - moves the button instead of showing screen
        function sayNo() {
            moveNoButton();
        }
        
        // Go back to main
        function goBack() {
            document.getElementById('responseNo').style.display = 'none';
            document.getElementById('mainContent').style.display = 'block';
        }
        
        // Celebration
        function createCelebration() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.innerHTML = ['ðŸ’•', 'ðŸ’—', 'ðŸ’–', 'ðŸ’', 'â¤ï¸'][Math.floor(Math.random() * 5)];
                    confetti.style.position = 'fixed';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.top = '-50px';
                    confetti.style.fontSize = (20 + Math.random() * 30) + 'px';
                    confetti.style.animation = 'fall 3s linear forwards';
                    confetti.style.zIndex = '100';
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 50);
            }
        }
        
        // Add fall animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                to {
                    top: 100vh;
                    transform: rotate(720deg);
                }
            }
        `;
        document.head.appendChild(style);
        
        // Initialize
        createHearts();
    </script>
